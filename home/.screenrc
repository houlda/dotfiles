## GNU Screen - Configuration file 
##----------------
## Configuration
##----------------
# detach on hangup
autodetach on
# Display the copyright page
startup_message off
# audible bell
vbell on
# Enable support for the "alternate screen" capability in all windows
altscreen on
# Allow bold colors
attrcolor b ".I"
# keep scrollback n lines
defscrollback 10000

##----------------
## xterm tweaks
##----------------
# Make the output buffer large for (fast) xterms.
termcapinfo xterm* OL=10000
# xterm can switch to dark background and has function keys.
termcapinfo xterm 'VR=\E[?5h:VN=\E[?5l'
termcapinfo xterm 'k1=\E[11~:k2=\E[12~:k3=\E[13~:k4=\E[14~'
termcapinfo xterm 'kh=\EOH:kI=\E[2~:kD=\E[3~:kH=\EOF:kP=\E[5~:kN=\E[6~'
# special xterm hardstatus: use the window title.
termcapinfo xterm 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'
# emulate part of the 'K' charset
termcapinfo xterm 'XC=K%,%\E(B,[\304,\\\\\326,]\334,{\344,|\366,}\374,~\337'
# xterm-52 tweaks:
# - uses background color for delete operations
termcapinfo xterm* be
# Enable 256 color term
term xterm-256color-bce-s

##----------------
## other terminals
##----------------
# Erase background with current bg color
term screen-256color-bce-s
defbce "on"
termcapinfo gnome* XT

##----------------
## Scripts
##----------------
# Script add '%1`%% CPU' to your hardstatus string. Result is like 38.4% CPU.
# backtick 1 15 15 $HOME/bin/cpuusage

##----------------
## Bindkey(s)
##----------------
# switch windows with (prev) and (next)
# Ctrl+Alt+Left, Ctrl+Alt+Right
bindkey ^[[1;7C prev
bindkey ^[[1;7D next
# Ctrl+Alt+Left, Ctrl+Alt+Right (Putty)
bindkey ^[^[[D prev
bindkey ^[^[[C next

##----------------
## Default Windows
##----------------
sessionname myscreen

# Default windows/tabs
screen -t bash  1 bash
screen -t code  2 bash
select 0

# window numbering starts at 1 not 0
bind c screen 1
bind 0 select 10

# Get rid of silly xoff stuff
bind s split

##----------------
## (hardstatus [string])
##----------------
hardstatus on
hardstatus alwayslastline
# THIS IS THE PRETTY BIT
hardstatus string '%{= Kd} %{= Kd}%-w%{= Kr}[%{= KW}%n %t%{= Kr}]%{= Kd}%+w %-= %{KG} %H%{KW}|%{KY}%101`%{KW}|%D %M %d %Y%{= Kc} %C%A%{-}'
